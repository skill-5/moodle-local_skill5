{{!
    @template local_skill5/user_management

    User Management page template.

    Context variables required for this template:
    * users - Array of user objects

    Example context (json):
    {
        "users": [
            {
                "name": "John Doe",
                "email": "john@example.com",
                "logincount": 5,
                "lastlogin": "2025-01-12",
                "detailsurl": "http://...",
                "detailstext": "View Details"
            }
        ]
    }
}}
<div class="local-skill5-user-management">
    {{#users}}
    <table class="generaltable">
        <thead>
            <tr>
                <th>{{#str}}name{{/str}}</th>
                <th>{{#str}}email{{/str}}</th>
                <th>{{#str}}login_count, local_skill5{{/str}}</th>
                <th>{{#str}}last_login, local_skill5{{/str}}</th>
                <th>{{#str}}actions{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#list}}
            <tr>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{logincount}}</td>
                <td>{{lastlogin}}</td>
                <td><a href="{{detailsurl}}">{{detailstext}}</a></td>
            </tr>
            {{/list}}
        </tbody>
    </table>
    {{/users}}
    {{^users}}
    <p class="alert alert-info">{{#str}}no_users, local_skill5{{/str}}</p>
    {{/users}}
</div>
