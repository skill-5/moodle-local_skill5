{{!
    @template local_skill5/connection_assistant

    Connection Assistant page template.

    Context variables required for this template:
    * userinfo - User information data
    * tip - Tip message with link

    Example context (json):
    {
        "userinfo": [
            {"label": "Admin Name", "value": "John Doe"},
            {"label": "Admin Email", "value": "admin@example.com"}
        ],
        "tip": "To manage the connection, go to <a href='...'>LTI Management</a>"
    }
}}
<div class="local-skill5-connection-assistant">
    <div class="generalbox boxaligncenter">
        <h3>{{#str}}connection_established_heading, local_skill5{{/str}}</h3>
        <p>{{#str}}connection_established_text, local_skill5{{/str}}</p>
        
        <h4>{{#str}}skill5userinfo, local_skill5{{/str}}</h4>
        <ul>
            {{#userinfo}}
            <li><strong>{{label}}:</strong> {{value}}</li>
            {{/userinfo}}
        </ul>
        
        <div class="text-muted" style="margin-top: 15px;">
            {{{tip}}}
        </div>
    </div>
</div>
